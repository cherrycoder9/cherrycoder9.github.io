{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./", // "src"에서 "." 으로 변경
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "api/**/*" // "src/**/*" 에서 "api/**/*" 로 변경
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}